{
    //disable usage data sending to third parties
    "telemetry.enableTelemetry": false,

    //i like this theme
    "workbench.colorTheme": "Flatland_Dark", 

    //tabs not spaces
    "editor.insertSpaces": false,
    "editor.fontSize": 14, //Windows 16

    //guides
    "editor.rulers": [
        80,
        120
    ],
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#212121"
    },
    "window.zoomLevel": 0,

    // The path to a PHP 7+ executable.
    "php.executablePath": "/usr/local/Cellar/php/7.4.0/bin/php", // Windows "C:\\MAMP\\bin\\php\\php7.2.10\\php.exe",

    // Points to the PHP executable.
    "php.validate.executablePath": "/usr/local/Cellar/php/7.4.0/bin/php", // Windows "C:\\MAMP\\bin\\php\\php7.2.10\\php.exe",
    "launch": {

        "configurations": [],
        "compounds": []
    },
    "extensions.ignoreRecommendations": true
}